<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.timtim17.dev.java.android.topgunrobotics" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="me.timtim17.dev.java.android.topgunrobotics.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.timtim17.dev.java.android.topgunrobotics.about.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="me.timtim17.dev.java.android.topgunrobotics.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.timtim17.dev.java.android.topgunrobotics.MainActivity" />
        </activity>
        <activity
            android:name="me.timtim17.dev.java.android.topgunrobotics.sponsors.SponsorActivity"
            android:label="@string/title_activity_sponsor"
            android:parentActivityName="me.timtim17.dev.java.android.topgunrobotics.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.timtim17.dev.java.android.topgunrobotics.MainActivity" />
        </activity>
        <activity
            android:name=".events.timer.TimerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_timer"
            android:parentActivityName="me.timtim17.dev.java.android.topgunrobotics.MainActivity"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.timtim17.dev.java.android.topgunrobotics.MainActivity" />
        </activity>
    </application>

</manifest>
